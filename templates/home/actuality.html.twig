{% extends 'base.html.twig' %}
{% block title %}Actualités{% endblock %}

{% block body %}
    <section class="bg-primary text-white" id="actualites" style="padding-top: 110px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="section-heading">Actualités</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-dark mt-4 mb-4 text-center" style="padding: 2em;">
                    <div class="card pb-4" style="width: 100%">
                        <div class="card-header w-100">
                            <h4 class="card-title text-center">{{ actualites[0].title }}</h4>
                        </div>
                        <div class="card-body w-100">
                            <i class="card-subtitle mb-2 text-muted">Ajouté le {{ actualites[0].createdAt|date('d-m-Y') }}</i>
                            <p class="card-text">{{ actualites[0].getDescription()|nl2br }}</p>
                        </div>
                    </div>
                </div>
                {% for actualite in actualites %}
                    {% if actualite.id is not same as(actualites[0].id)  %}
                        <div class="col-md-4 mb-4">
                            <div class="card bg-transparent border-light" style="width: 100%">
                                <div class="card-header">
                                    <h5 class="card-title text-center">{{ actualite.title }}</h5>
                                </div>
                                <div class="card-body">
                                    <i class="card-subtitle mb-2 text-muted">Ajouté le {{ actualite.createdAt|date('d-m-Y') }}</i>
                                    <p class="card-text">{{ actualite.getDescription()|nl2br }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}



