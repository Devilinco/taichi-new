{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <section class="bg-primary text-white" id="Locations" style="padding-top: 110px;">
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-12">
                    <h2 class="section-heading text-center">Lieux enregistrés</h2>
                    <a class="btn btn-success float-right" href="{{ path('location_new') }}">Ajouter</a>
                </div>
                <div class="col-md-12 mt-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm-12">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Lien Google Maps</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody class="text-white">
                        {% for location in locations %}
                            <tr>
                                <td>{{ location.name }}</td>
                                <td><a href="{{ location.googleMapsLink }}" target="_blank" class="btn btn-primary">Plan</a></td>
                                <td>{{ location.address }}</td>
                                <td>{{ location.postalCode }}</td>
                                <td>{{ location.city }}</td>
                                <td class="text-right">
                                    <a class="btn btn-info" href="{{ path('location_edit', {'id': location.id}) }}">éditer</a>
                                </td>
{#                                <td>#}
{#                                    <a href="{{ path('location_show', {'id': location.id}) }}">show</a>#}
{#                                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>#}
{#                                </td>#}
                            </tr>
                        {% else %}
                            <tr>
                                    <td colspan="7">Aucun lieu enregistré</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
