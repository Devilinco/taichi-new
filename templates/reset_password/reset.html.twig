{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <section class="bg-primary text-white h-75" id="resetRequest" style="padding-top:110px;">
        <div class="container">
            <div class="row flex justify-content-center">
                <div class="col-md-8 text-center flex-column justify-content-center">
                    <h1>Réinitialiser votre mot de passe</h1>.
                    {{ form_start(resetForm) }}
                        {{ form_errors(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <button class="btn btn-primary" type="submit">Reinitialiser</button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}