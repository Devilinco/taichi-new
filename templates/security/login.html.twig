{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}
    <section class="bg-primary text-white" id="Actualites" style="padding-top:110px">
        <div class="container text-center">
            <div class="row d-flex justify-content-center mt-4">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connectés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Entrez vos identifiants</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword mt-4">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link mt-4">
                        Mot de passe oublié
                    </a>
                    <button class="btn btn-lg btn-primary mt-4" type="submit">
                        Se connecter
                    </button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
